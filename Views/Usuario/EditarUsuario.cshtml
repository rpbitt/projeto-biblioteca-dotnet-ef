@model Usuario
@{
    ViewData["Title"] = "Edição de Usuários";
}

<h1 class="row justify-content-md-center">Cadastro de Usuários</h1>
<div class="row justify-content-md-center">
    <form asp-action="EditarUsuario" method="POST" class="col-md-4">
        <fieldset>
            <legend>Usuario</legend>
            <div class="form-group">
                <label asp-for="Nome">Nome</label>
                <input asp-for="Nome" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Login">Login</label>
                <input asp-for="Login" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Senha">Senha</label>
                <input asp-for="Senha" class="form-control" required />
            </div>
            <div class="form-group">
                <label asp-for="Tipo">Tipo</label>
                <input asp-for="Tipo" class="form-control" required />
            </div>
        </fieldset>

        <input type="submit" value="Salvar" class="btn btn-primary" />
    </form>
</div>